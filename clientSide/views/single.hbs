{{>header}}
{{>navbar}}
<section class="my-5 container">
    {{#unless result}}
    <div class="alert alert-danger">
        Invalid task id
    </div>
    {{else}}
    <div class="row">
        <div class="col-4">
            id: {{result.id}}
        </div>   
        <div class="col-6">
            title: {{result.title}}
        </div>
        <div class="col-4">
            Author: {{result.Author}}
        </div><div class="col-4">
            section: {{result.section}}
        </div>
     
        <div class="col-6">
            number of pages: {{result.numberpages}}
        </div>
    </div>
    {{/unless}}
</section>
{{>footer}}